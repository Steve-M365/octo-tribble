{
  "name": "scriptflow",
  "version": "1.0.0",
  "description": "Enterprise Script Management Platform with IDE interface",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Steve-M365/scriptflow.git"
  },
  "bugs": {
    "url": "https://github.com/Steve-M365/scriptflow/issues"
  },
  "homepage": "https://github.com/Steve-M365/scriptflow#readme",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "install:all": "npm install && cd packages/backend && npm install && cd ../frontend && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}